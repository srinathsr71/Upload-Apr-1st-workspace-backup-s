package OrangeHrm.Maintest;

import java.io.IOException;

import org.testng.Assert;

import org.testng.annotations.BeforeMethod;
import org.testng.annotations.Listeners;
import org.testng.annotations.Test;

import com.orangehrm.Parent.Testbase;
import com.orangehrm.Parent.reportslisterners;

import OrangeHrm.Pageobjectclass.Adminpage;
import OrangeHrm.Pageobjectclass.Loginpage;
import OrangeHrm.Pageobjectclass.Logout;

@Listeners(reportslisterners.class)
public class Maintest extends Testbase{
	Loginpage login; //here globally declared so we are using login=new loginpage()
	Adminpage admin;
	Logout logout;
	
	
    public Maintest() throws IOException {
		super();
    }

	@BeforeMethod
    public void Beforetest() throws IOException {
		initialization();
		login=new Loginpage();
    
    	
    }
	@Test
	public void Maintest() throws IOException {
		String Pagetitle=login.getpagetitle();
	    Assert.assertEquals(Pagetitle, "OrangeHRM");
	    System.out.println(Pagetitle);
	    boolean Logtitle= login.logintitle(); //when we use boolean it will return in true or false
	    Assert.assertTrue(Logtitle);
	    admin=login.Login("Admin", "admin123566");
	    Assert.assertEquals("Invalid crede", login.Errormessage());
	    String pagetitle=login.getpagetitle();
	    Assert.assertEquals(pagetitle, "oranghhrm");
	    
	    
	    
	}
    
   // @AfterMethod
    public void teardowm() {
    	driver.quit();
    }
}
